<%= form_for(entry) do |f| %>
  	<% if entry.errors.any? %>
    	<div id="error_explanation" class="alert alert-danger" >
      		<h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      		<ul>
      			<% entry.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
      			<% end %>
      		</ul>
    	</div>
  	<% end %>

  	<div class="form-group">
    	<%= f.label :title, class: "control-label" %>
    	<%= f.text_field :title, class: "form-control"  %>
	    <small id="idea_name_help" class="form-text text-muted">Name your log entry</small>
  	</div>

  	<div class="form-group">
    	<%= f.label :date, class: "control-label" %>
    	<%= f.date_select :date, class: "form-control"  %>
	    <small id="idea_name_help" class="form-text text-muted">Pick a date</small>
  	</div>

  	<div class="form-group">
    	<%= f.label :contents, class: "control-label"  %>
    	<%= f.text_area :contents, class: "form-control"  %>
	    <small id="idea_name_help" class="form-text text-muted">Tell me what happened</small>
  	</div>

  	<div class="actions">
    	<%= f.submit "save", class: "btn btn-primary material-icons" %>
  	</div>

<% end %>
