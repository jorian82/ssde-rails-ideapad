<div class="container">

	<h1>Logger Entries</h1>

	<table class="table table-striped">
	  <thead>
	    <tr class="bg-primary">
	      <th style="width: 20%">Date</th>
	      <th style="width: 60%">Title</th>
	      <th style="width: 20%">Actions</th>
	    </tr>
	  </thead>
	

  		<tbody>
    		<% @entries.each do |entry| %>
      		<tr>
        		<td><%= entry.date %></td>
        		<td><%= entry.title %></td>
        		<td>
		        	<div class="btn-group" role="group" aria-label="actions">
			        	<%= link_to entry, class: "btn btn-success" do %>
			        		<i class="material-icons">visibility</i>
			        	<% end %>
			        	<%= link_to edit_entry_path(entry), class: "btn btn-info"  do %>
			        		<i class="material-icons">edit</i>
			        	<% end %>
			        	<%= link_to entry, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
			        		<i class="material-icons">delete</i>
			        	<% end %>
		        	</div>
		        </td>
      		</tr>
    		<% end %>
  		</tbody>
	</table>

	<br>

	<%= link_to new_entry_path, class: "btn btn-primary"  do %>
		<i class="glyphicon glyphicon-plus"></i>&nbsp;New Idea
	<% end %>

</div>
